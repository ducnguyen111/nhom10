<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity2"
    android:gravity="center">

    <TextView
        android:textColor="#00BCD4"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/coiny"
        android:text="Money Manager"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:maxLength="4"
        android:hint="Nhập mã PIN"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="26dp"
        android:id="@+id/etLogin" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Đăng nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLogin"
        android:background="@drawable/background"
        android:id="@+id/btnLogin"
        android:layout_alignEnd="@+id/etLogin"
        android:layout_alignStart="@+id/etLogin" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Thay PIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:id="@+id/btnReset"
        android:background="@drawable/background"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin" />

    <TextView
        android:text="*PIN mặc định là: 1234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReset"
        android:layout_alignStart="@+id/btnReset"/>


</LinearLayout>